#:kivy 1.8.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

screenManagement:
	fishName: txt_input
	transition: FadeTransition()
	homeScreen:
		BoxLayout:
		id: weatherForecast
		orientation: 'horizontal'
		Button:
			text: 'Weather Forecast'

		BoxLayout:
		id: fishingLocations
		orientation: 'horizontal'
		Button:
			text: 'Fishing Locations'
			
	settingsScreen:
		<someWidget>
			userMail: txt_input

	
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Enter your email'
					font_size: 12

    			TextInput:
        			id: txt_input
		
	recordCatchScreen:
	weatherScreen:
	localScreen:
	
#:kivy 1.8.0
<rootWidget>:
	fishName: txt_input

	
	BoxLayout:
		orientation: 'horizontal'
		Label:
			text: 'Please enter the name of the fish'
			font_size: 12

    	TextInput:
        	id: txt_input
